import java.io.*;
import java.util.*;
public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int num=sc.nextInt(),sum=0,rem=0,temp=num;
        while(num>0){
        rem=num%10;
        sum=sum+rem;
        num=num/10; 
        }
        if(temp%sum==0)
            System.out.println("Harshad Number");
        else{
            System.out.println("Not Harshad Number");
        }
        
        
    }
}
